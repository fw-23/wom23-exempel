generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model notes {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  noteText String?
  userId String?
  createdAt DateTime? @default(now()) 
  updatedAt DateTime? @default(now())
}


model users {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  name    String?
  password String?
  createdAt DateTime @default(now()) 
  updatedAt DateTime @default(now())
}
